<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfilActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"

        />
    <ScrollView
        android:layout_below="@id/toolbar"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#ffffff"
            android:elevation="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">


                <LinearLayout
                    android:id="@+id/container_profil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fotoProfil"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="32dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/infonama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/container_profil"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/username2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/container_profil"
                        android:layout_marginVertical="4dp"
                        android:text="Username" />

                    <TextView
                        android:id="@+id/txt_nama2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/username2"
                        android:layout_marginVertical="4dp"
                        android:text="Nama" />

                    <TextView
                        android:id="@+id/txt_prodi2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_nama"
                        android:layout_marginVertical="4dp"
                        android:text="Prodi" />

                    <TextView
                        android:id="@+id/txt_nohp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_prodi"
                        android:layout_marginVertical="4dp"
                        android:text="No Wa" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/infonama2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/container_profil"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@id/infonama3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@id/txt_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/container_profil"
                        android:layout_marginVertical="4dp"
                        android:text="Username" />

                    <TextView
                        android:id="@id/txt_nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_username"
                        android:layout_marginVertical="4dp"
                        android:text="Nama" />

                    <TextView
                        android:id="@id/txt_prodi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_nama"
                        android:layout_marginVertical="4dp"
                        android:text="Prodi" />

                    <TextView
                        android:id="@id/txt_nohp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_prodi"
                        android:layout_marginVertical="4dp"
                        android:text="No Wa" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/infonama3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/container_profil"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@id/infonama"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/container_profil"
                        android:layout_marginVertical="4dp"
                        android:text=":" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_username"
                        android:layout_marginVertical="4dp"
                        android:text=":" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_nama"
                        android:layout_marginVertical="4dp"
                        android:text=":" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_prodi"
                        android:layout_marginVertical="4dp"
                        android:text=":" />
                </LinearLayout>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </ScrollView>

    <Button
        android:id="@+id/btn_editprofil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroll"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="32dp"
        android:text="Edit Profile" />
</RelativeLayout>